{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "baseUrl": "./",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "share/*": ["src/share/*"]
        }
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
